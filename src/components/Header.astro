---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import type { ui } from '../i18n/ui';
import LanguagePicker from './LanguagePicker.astro';
import { Image } from 'astro:assets';
import logoSvg from '../assets/images/logo.svg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header 
  x-data="{ 
    scrolled: false,
    scrollProgress: 0,
    updateScroll() {
      this.scrolled = window.scrollY > 20;
      this.scrollProgress = Math.min(100, Math.round((window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)) * 100));
    }
  }"
  @scroll.window="updateScroll"
  :class="{ 'shadow-md bg-white/90': scrolled, 'bg-transparent': !scrolled }"
  class="fixed w-full transition-all duration-300 z-50"
>
  <div class="absolute bottom-0 left-0 h-0.5 bg-primary transition-all duration-300" :style="`width: ${scrollProgress}%`"></div>
  
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a 
      href={`/${lang}`} 
      class="text-2xl font-bold text-primary group flex items-center gap-2"
    >
      <Image 
        src={logoSvg} 
        alt="VA Services Logo" 
        width={40} 
        height={40} 
        class="logo-img transition-all duration-300 origin-center group-hover:scale-110 group-hover:rotate-12"
      />
      <span class="text-accent"></span>Services
    </a>
    
    <div class="hidden md:flex items-center space-x-8">
      <nav class="flex space-x-6">
        {['home', 'services', 'about', 'testimonials', 'contact'].map((item) => (
          <a 
            href={`/${lang}${item === 'home' ? '' : `/#${item}`}`} 
            class="text-dark hover:text-primary transition-colors relative group"
          >
            {t(`nav.${item}` as keyof typeof ui['en'])}
            <span class="absolute bottom-0 left-0 w-full h-0.5 bg-primary transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></span>
          </a>
        ))}
      </nav>
      <LanguagePicker />
    </div>
    
    <div class="md:hidden" x-data="{ mobileMenuOpen: false }">
      <button 
        @click="mobileMenuOpen = !mobileMenuOpen" 
        class="text-dark focus:outline-none"
        aria-label="Toggle menu"
      >
        <svg 
          x-show="!mobileMenuOpen" 
          xmlns="http://www.w3.org/2000/svg" 
          class="h-6 w-6" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg 
          x-show="mobileMenuOpen" 
          xmlns="http://www.w3.org/2000/svg" 
          class="h-6 w-6" 
          fill="none" 
          viewBox="0 0 24 24" 
          stroke="currentColor"
          style="display: none;"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      
      <div 
        x-show="mobileMenuOpen" 
        x-transition:enter="transition ease-out duration-200" 
        x-transition:enter-start="opacity-0 -translate-y-4" 
        x-transition:enter-end="opacity-100 translate-y-0" 
        x-transition:leave="transition ease-in duration-150" 
        x-transition:leave-start="opacity-100 translate-y-0" 
        x-transition:leave-end="opacity-0 -translate-y-4" 
        class="absolute top-16 left-0 right-0 bg-white shadow-lg p-4 space-y-4"
        style="display: none;"
      >
        <nav class="flex flex-col space-y-3">
          <a href={`/${lang}`} class="text-dark hover:text-primary transition-colors" @click="mobileMenuOpen = false">{t('nav.home')}</a>
          <a href={`/${lang}/#services`} class="text-dark hover:text-primary transition-colors" @click="mobileMenuOpen = false">{t('nav.services')}</a>
          <a href={`/${lang}/#about`} class="text-dark hover:text-primary transition-colors" @click="mobileMenuOpen = false">{t('nav.about')}</a>
          <a href={`/${lang}/#testimonials`} class="text-dark hover:text-primary transition-colors" @click="mobileMenuOpen = false">{t('nav.testimonials')}</a>
          <a href={`/${lang}/#contact`} class="text-dark hover:text-primary transition-colors" @click="mobileMenuOpen = false">{t('nav.contact')}</a>
        </nav>
        <div class="pt-2 border-t border-gray-200">
          <LanguagePicker />
        </div>
      </div>
    </div>
  </div>
</header>