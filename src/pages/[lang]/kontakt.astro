---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import { languages } from '../../i18n/ui';
import { Image } from 'astro:assets';
import mailImage from '../../assets/images/mail.jpg';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('contact.title')}>
  <!-- Hero Section -->
  <section 
    class="relative min-h-[90vh] flex items-center pt-32 pb-20 overflow-hidden"
    transition:animate="fade"
  >
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-secondary/5 to-accent/5 -z-20"></div>
    
    <!-- Decorative Shapes -->
    <div class="absolute inset-0 overflow-hidden -z-10">
      <div class="absolute top-1/4 -right-20 w-96 h-96 bg-primary/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-1/4 -left-20 w-96 h-96 bg-secondary/10 rounded-full blur-3xl"></div>
    </div>
    
    <!-- Animated Elements -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-20 left-10 w-20 h-20 border-4 border-primary/20 rounded-2xl animate-float"></div>
      <div class="absolute bottom-20 right-10 w-16 h-16 border-4 border-secondary/20 rounded-full animate-float" style="animation-delay: -2s"></div>
      <div class="absolute top-40 right-20 w-12 h-12 border-4 border-accent/20 rounded-lg animate-float" style="animation-delay: -4s"></div>
    </div>

    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Content Column -->
        <div class="text-center lg:text-left">
          <span class="inline-block px-4 py-2 rounded-full bg-primary/10 text-primary mb-6">
            {t('contact.badge')}
          </span>
          <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6 bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent">
            {t('contact.title')}
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto lg:mx-0">
            {t('contact.subtitle')}
          </p>
          
          <!-- Quick Contact Info -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a 
              href="mailto:contact@vaservices.com"
              class="inline-flex items-center px-6 py-3 rounded-xl bg-white shadow-sm hover:shadow-md transition-all group"
            >
              <span class="bg-primary/10 p-2 rounded-lg group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </span>
              <span class="ml-3">contact@vaservices.com</span>
            </a>
            <div class="inline-flex items-center px-6 py-3 rounded-xl bg-white shadow-sm">
              <span class="bg-secondary/10 p-2 rounded-lg">
                <svg class="w-5 h-5 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </span>
              <span class="ml-3">Mon - Fri, 9:00 - 17:00</span>
            </div>
          </div>
        </div>

        <!-- Image Column -->
        <div class="relative lg:translate-x-12">
          <div class="absolute inset-0 bg-gradient-to-r from-primary/20 to-secondary/20 rounded-3xl transform rotate-6"></div>
          <Image
            src={mailImage}
            alt="Contact Us"
            class="relative rounded-3xl shadow-xl transform hover:-rotate-2 transition-transform duration-500"
            width={600}
            height={400}
            format="webp"
            quality={90}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section 
    class="py-20 bg-gradient-to-b from-white to-gray-50"
    transition:animate="slide"
  >
    <div class="container">
      <div class="max-w-5xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
            {t('contact.form.title')}
          </h2>
          <p class="text-xl text-gray-600">
            {t('contact.form.subtitle')}
          </p>
        </div>

        <div class="grid md:grid-cols-5 gap-12 items-start">
          <!-- Contact Information Cards -->
          <div class="md:col-span-2 space-y-6">
            <!-- Social Media Links -->
            <div class="bg-white rounded-2xl p-8 shadow-sm">
              <h3 class="font-bold text-xl text-gray-900 mb-6">{t('contact.social')}</h3>
              <div class="grid grid-cols-3 gap-4">
                <a 
                  href="#" 
                  class="flex flex-col items-center p-4 rounded-xl hover:bg-primary/5 transition-colors group"
                >
                  <div class="bg-primary/10 p-3 rounded-lg group-hover:scale-110 transition-transform">
                    <svg class="h-6 w-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M22.675 0h-21.35c-.732 0-1.325.593-1.325 1.325v21.351c0 .731.593 1.324 1.325 1.324h11.495v-9.294h-3.128v-3.622h3.128v-2.671c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.795.143v3.24l-1.918.001c-1.504 0-1.795.715-1.795 1.763v2.313h3.587l-.467 3.622h-3.12v9.293h6.116c.73 0 1.323-.593 1.323-1.325v-21.35c0-.732-.593-1.325-1.325-1.325z"/>
                    </svg>
                  </div>
                  <span class="mt-2 text-sm font-medium">Facebook</span>
                </a>
                <!-- Add other social media links similarly -->
              </div>
            </div>

            <!-- FAQ or Additional Info Card -->
            <div class="bg-white rounded-2xl p-8 shadow-sm">
              <h3 class="font-bold text-xl text-gray-900 mb-4">{t('contact.faq')}</h3>
              <div class="space-y-4">
                <details class="group">
                  <summary class="flex justify-between items-center cursor-pointer">
                    <span class="font-medium">{t('contact.faq1.question')}</span>
                    <svg class="w-5 h-5 transition-transform group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </summary>
                  <p class="mt-3 text-gray-600">{t('contact.faq1.answer')}</p>
                </details>
                <!-- Add more FAQ items as needed -->
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="md:col-span-3">
            <form 
              class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-md transition-all duration-300"
              x-data="{ 
                loading: false,
                success: false,
                error: false,
                async submitForm(event) {
                  event.preventDefault();
                  this.loading = true;
                  this.success = false;
                  this.error = false;
                  
                  // Simulate form submission
                  await new Promise(resolve => setTimeout(resolve, 1000));
                  
                  this.loading = false;
                  this.success = true;
                }
              }"
              @submit="submitForm"
            >
              <div class="space-y-6">
                <div class="grid md:grid-cols-2 gap-6">
                  <!-- Name Input -->
                  <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                      {t('contact.name')}
                    </label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      required
                      class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all"
                    />
                  </div>

                  <!-- Email Input -->
                  <div>
                    <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                      {t('contact.email')}
                    </label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      required
                      class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all"
                    />
                  </div>
                </div>

                <!-- Message Input -->
                <div>
                  <label for="message" class="block text-sm font-medium text-gray-700 mb-1">
                    {t('contact.message')}
                  </label>
                  <textarea
                    id="message"
                    name="message"
                    rows="6"
                    required
                    class="w-full px-4 py-2 border border-gray-200 rounded-lg focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all resize-none"
                  ></textarea>
                </div>

                <!-- Submit Button -->
                <button
                  type="submit"
                  class="w-full btn btn-primary group relative overflow-hidden"
                  :disabled="loading"
                >
                  <span 
                    class="absolute inset-0 bg-gradient-to-r from-primary via-secondary to-accent opacity-0 group-hover:opacity-20 transition-opacity"
                  ></span>
                  <span x-show="!loading" class="relative">{t('contact.submit')}</span>
                  <span x-show="loading" class="relative flex items-center justify-center">
                    <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    {t('contact.sending')}
                  </span>
                </button>

                <!-- Success/Error Messages -->
                <div
                  x-show="success"
                  x-transition
                  class="bg-green-50 text-green-800 rounded-lg p-4 flex items-center"
                >
                  <svg class="h-5 w-5 text-green-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  {t('contact.success')}
                </div>

                <div
                  x-show="error"
                  x-transition
                  class="bg-red-50 text-red-800 rounded-lg p-4 flex items-center"
                >
                  <svg class="h-5 w-5 text-red-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  {t('contact.error')}
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout> 